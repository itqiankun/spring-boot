<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itqiankun.mybatis.source.mapper.UserMapper">
    <select id="selectUserById" resultType="com.itqiankun.mybatis.source.entity.User"
            parameterType="java.lang.Integer">
        select * from user where id = #{id}
    </select>

    <select id="selectUserByUser" resultType="com.itqiankun.mybatis.source.entity.User"
            parameterType="com.itqiankun.mybatis.source.entity.User">
        select * from user where id = #{id} and name=#{name} limit #{lit}
    </select>

    <select id="selectUserByUserLike" resultType="com.itqiankun.mybatis.source.entity.User"
            parameterType="com.itqiankun.mybatis.source.entity.User">
        select * from user where id >= #{id} and name like CONCAT(#{name}, '%')  limit #{lit}
    </select>

    <select id="testResultTypeAlias" resultType="int" >
        select count(1) from user
    </select>
</mapper>